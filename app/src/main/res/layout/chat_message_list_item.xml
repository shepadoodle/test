<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/chat_message_avatar"
        android:layout_marginLeft="5dp"
        android:id="@+id/chat_message_username"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/Black"
        app:layout_constraintTop_toBottomOf="@+id/chat_message_username"
        app:layout_constraintLeft_toRightOf="@+id/chat_message_avatar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/chat_message_message"/>

    <ImageView
        android:id="@+id/chat_message_avatar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/avatar_cwm_logo"
        app:layout_constraintTop_toBottomOf="@+id/chat_message_username"
        tools:layout_editor_absoluteX="10dp">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>